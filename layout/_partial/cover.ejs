<% if (theme.cover.enable) { %>
<section class="cover">
  <% if (theme.github && theme.github.url){ %>
  <%# "GitHub Ribbons" %>
  <a class="forkMe" href="<%=theme.github.url%>" target="_blank"><img width="149" height="149"
      src="<%- url_for('images/forkme.png') %>" class="attachment-full size-full" alt="Fork me on GitHub"
      data-recalc-dims="1"></a>
  <% } %>
  <div class="cover-frame">
    <div class="bg-box">
      <% if ((theme.moon.switch.button || theme.moon.switch.system) && theme.cover.dual) { %>
      <script>
        if (Number(localStorage.moon)) {
          document.querySelector('.bg-box').innerHTML = '<img id="moon" src="<%- theme.cover.path.moon %>" alt="image frame">';
        } else {
          document.querySelector('.bg-box').innerHTML = '<img id="sun" src="<%- theme.cover.path.sun %>" alt="image frame">';
        }
      </script>
      <% } else { %>
      <img src="<%- theme.cover.path.default %>" alt="image frame">
      <% } %>
    </div>
    <div class="cover-inner text-center text-white">
      <h1><a href="<%- url_for() %>"><%= config.title %></a></h1>
      <div id="subtitle-box">
        <% if (theme.subtitle.enable) { %>
        <span id="subtitle"></span>
        <% } else { %>
        <span id="subtitle"><%= theme.subtitle.text %></span>
        <% } %>
      </div>
      <div>
        <% if (theme.cover.logo) { %>
        <img src="<%- theme.cover.logo %>" class="cover-logo" alt="<%= config.title %>" />
        <% } %>
      </div>
    </div>
  </div>
  <div class="cover-learn-more">
    <a class="anchor"><i class="ri-arrow-down-line"></i></a>
  </div>
</section>
<% } %>

<% if (theme.subtitle.enable){ %>
<%- js('/js/typed.min') %>
<% } %>